<%- include("partials/header") -%>

<h1>Home</h1>

<%  if(posts.length === 0) { %>
    <h3>Click on Compose tab to Add post</h3>
<% } else { 
        posts.forEach(post => {   %>
        <a href="id/<%= post._id %>"><h2><%= post.title %></h2></a>
        <!-- TO SLICE STRING -->
        <p>
            <%= post.body.substring(0, 100) + "..." %>
            <a href="id/<%= post._id %>">Read More</a>
        </p>
    <%    });   
};  %>


<%- include("partials/footer") -%>


